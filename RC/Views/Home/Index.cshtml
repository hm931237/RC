            </div>
            <div class="modal-body">




                @using (Html.BeginForm())
                {

                    <div class="form-group">

                        @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", id = "username", type = "text", name = "username", placeholder = "Username" } })

                        <span class="error_form" id="email_error_message"></span>
                    </div>
                    <div class="form-group">

